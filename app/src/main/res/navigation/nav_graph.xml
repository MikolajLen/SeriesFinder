<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.seriesfinder.movie.MovieListFragment"
        android:label="MovieListFragment"
        tools:layout="@layout/movie_list_layout" >
        <action
            android:id="@+id/navigate_to_player"
            app:destination="@id/moviePlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/moviePlayerFragment"
        android:name="com.example.seriesfinder.player.MoviePlayerFragment"
        android:label="MoviePlayerFragment"
        tools:layout="@layout/movie_player_layout" />
</navigation>
